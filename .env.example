# Copy this file to `.env` and fill in the values for production.

# Stripe subscription prices
STRIPE_SECRET_KEY=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
STRIPE_PRICE_PREMIUM=

# Frontend URL used for Stripe checkout callbacks
FRONTEND_URL=http://localhost:3000

# CORS origin allowed by the back‑end.  Set to your front‑end domain.  Use `*` to allow all.
CORS_ORIGIN=http://localhost:3000

# OpenAI API key for AI optimisation and assistant features
OPENAI_API_KEY=

# Twilio credentials for SMS notifications
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Postmark credentials for email notifications
POSTMARK_API_TOKEN=
POSTMARK_SENDER_ADDRESS=

# Admin email to receive contact form submissions (falls back to POSTMARK_SENDER_ADDRESS)
ADMIN_EMAIL=

# Database connection URL (PostgreSQL).  If provided, the backend will use this database
# instead of the JSON files for crews and jobs.  Example: postgres://user:password@host:5432/database
DATABASE_URL=